<resources>

    <!--
    It works with minSdk 24 as well as with 31+.
    It's not animating but no reason for separate theme res file for v31.
    -->
    <style name="Theme.AppStart" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_anim</item>
        <item name="windowSplashScreenAnimationDuration">3000</item>
        <item name="postSplashScreenTheme">@style/Theme.RadioStations</item>
    </style>

    <style name="Theme.RadioStations" parent="android:Theme.DeviceDefault.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
    </style>
</resources>